@{
    // Layout = "_LoginLayout";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <form asp-action="ValidarUsuario">
        <div class="form-group row mt-5 pt-5 w-50">
            <div class="col-sm-2">
                <label>Usuario</label>
            </div>
            <div class="col-sm-4">
                @Html.TextBox("usuario", "", new { @class = "form-control" })
            </div>
            <div class="col-sm-2">
                <label>Clave</label>
            </div>
            <div class="col-sm-4">
                @Html.TextBox("clave", "", new { @class = "form-control" })
            </div>
        </div>
        @if (ViewBag.Mensaje != "")
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Mensaje
            </div>
        }
        <input type="submit" class="btn btn-primary" value="Validar" />
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>

